<h1>Editing Book</h1>

<%= form_with model: @book,url:book_path(@book.id), method: :patch do |f| %>

<% if @book.errors.any? %>
  <%= @book.errors.count %>件のエラーが発生しました
  <ul>
   <% @book.errors.full_messages.each do |message| %>
  <li><%= message %></li>
   <% end %>
  </ul>
   <% end %>

  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Body</h4>
  <%= f.text_area :body %>

  <%= f.submit 'Update Book' %>
  <%= link_to 'Show', "/books/#{@book.id}" %>
  |
  <span><a href="/books">Back</a></span>


<% end %>